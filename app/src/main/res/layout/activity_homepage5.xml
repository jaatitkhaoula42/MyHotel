<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="134dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        >

         <Button
             android:id="@+id/btn1"
             android:layout_width="30dp"
             android:layout_height="25dp"
             android:background="@drawable/sittings"
             android:scaleType="fitCenter"
             android:layout_marginTop="13dp" />

        <TextView
            android:id="@+id/hitext"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:paddingTop="12dp"
            android:text="HI, USERNAME ðŸ‘‹"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/notifbtn"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@null"
            android:contentDescription="button with image"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/notif"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/searchbtn"
        android:layout_width="350dp"
        android:layout_height="47dp"

        android:background="#26434141"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@drawable/search2" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="47dp"
            android:fontFamily="sans-serif-medium"
            android:hint="Search"
            android:paddingTop="2dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />



           <Button

               android:id="@+id/btn2"
               android:layout_width="50dp"
               android:background="@drawable/filter"
               android:layout_height="35dp"
               android:layout_gravity="center"

               />



    </LinearLayout>
        <ListView
            android:id="@+id/hotelListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>