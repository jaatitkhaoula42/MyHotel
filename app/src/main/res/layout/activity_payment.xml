<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment">
    <LinearLayout
        android:id="@+id/insclin2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/hotel4"
            >
            <ImageButton
                android:id="@+id/backButton1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:backgroundTint="@null"
                android:src="@drawable/back1" />
        </LinearLayout>


        <!-- قسم إدخال البيانات -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Full Name"
            android:textSize="20sp"
            android:layout_marginTop="70dp"/>
        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:hint="Your Name "
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_input" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Card Number"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/editTextCardNumber"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="number"
            android:hint="****************12345678"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_input" />

        <!-- قسم طرق الدفع -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Pay via : "
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/paypalLogo"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/paypal_logo" />

            <ImageView
                android:id="@+id/mastercardLogo"
                android:layout_width="100dp"
                android:clickable="true"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:src="@drawable/mastercard_logo" />

            <ImageView
                android:id="@+id/visaLogo"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:src="@drawable/visa_logo" />
        </LinearLayout>

        <!-- زر الدفع -->
        <Button
            android:id="@+id/buttonPayNow"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Pay Now"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>